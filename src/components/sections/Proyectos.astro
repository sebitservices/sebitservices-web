<script>
  function initTimelineAnimation() {
    const timelineContainer = document.querySelector('.timeline-container');
    const timelineLine = document.querySelector('.timeline-line');
    const timelineItems = document.querySelectorAll('.timeline-item');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          if (entry.target.classList.contains('timeline-container')) {
            timelineLine?.classList.add('animate');
          }
          
          if (entry.target.classList.contains('timeline-item')) {
            setTimeout(() => {
              entry.target.classList.add('animate');
            }, 300);
          }
        }
      });
    }, {
      threshold: 0.2,
      rootMargin: '-50px'
    });

    if (timelineContainer) {
      observer.observe(timelineContainer);
    }

    timelineItems.forEach((item, index) => {
      observer.observe(item);
      if (window.innerWidth < 768) {
        (item as HTMLElement).style.transitionDelay = `${index * 200}ms`;
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initTimelineAnimation);
  document.addEventListener('astro:page-load', initTimelineAnimation);
</script> 