<script>
  // Función para manejar la intersección
  const handleIntersection = (entries) => {
    entries.forEach(entry => {
      const elements = entry.target.querySelectorAll('.animate-element');
      if (entry.isIntersecting) {
        elements.forEach(element => {
          element.classList.add('opacity-100', 'translate-y-0');
        });
      } else {
        elements.forEach(element => {
          element.classList.remove('opacity-100', 'translate-y-0');
        });
      }
    });
  };

  // Crear y configurar el observer
  const observer = new IntersectionObserver(handleIntersection, {
    threshold: 0.2,
    rootMargin: '-50px'
  });

  // Observar la sección cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('#elegirnos');
    if (section) {
      observer.observe(section);
    }
  });
</script> 