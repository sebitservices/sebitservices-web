<script is:inline>
  // Implementación directa para manejar la navegación a la sección de contacto
  document.addEventListener('DOMContentLoaded', function() {
    // Añadir scroll suave directamente para toda la página
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href');
        const targetElement = document.querySelector(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Verificar que los botones de "Comenzar Ahora" funcionen correctamente
    const contactSection = document.getElementById('contacto');
    if (contactSection) {
      // Agregar un manejador para toda la página que capture clics en botones
      document.addEventListener('click', function(e) {
        // Capturar clics en botones "Comenzar Ahora"
        if (e.target && (e.target.textContent.trim() === 'Comenzar Ahora' || 
            (e.target.parentElement && e.target.parentElement.textContent.trim() === 'Comenzar Ahora'))) {
          e.preventDefault();
          e.stopPropagation();
          
          // Navegar a la sección de contacto
          contactSection.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
          
          // Resaltar brevemente la sección de contacto
          contactSection.classList.add('highlighted-section');
          setTimeout(() => {
            contactSection.classList.remove('highlighted-section');
          }, 1500);
        }
      }, true); // Usar fase de captura para asegurar que se ejecute antes
    }
  });
</script>
