<footer class="bg-slate-950 border-t border-slate-800/50">
  <div class="container mx-auto px-6 py-12">
    <!-- Grid superior -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <!-- Logo y descripción -->
      <div class="col-span-2 md:col-span-1">
        <a href="#inicio" class="inline-block group">
          <span class="text-2xl font-bold bg-gradient-to-r from-indigo-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
            SebitServices
          </span>
          <span class="block mt-1 w-0 group-hover:w-full h-0.5 bg-gradient-to-r from-indigo-500 to-pink-500 transition-all duration-300"></span>
        </a>
        <p class="mt-4 text-slate-400 text-sm">
          Transformamos ideas en experiencias digitales excepcionales. Desarrollo web profesional y soluciones digitales a medida desde Chile para el mundo.
        </p>
        <div class="mt-4 flex items-center gap-3">
          {techStack.map(tech => (
            <div class="flex items-center gap-1.5 text-slate-400 hover:text-white transition-colors">
              <Fragment set:html={tech.icon} />
              <span class="text-sm">{tech.name}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Enlaces del footer -->
      {footerLinks.map(section => (
        <div>
          <h3 class="text-white font-semibold mb-4">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.href}
                  class="text-slate-400 hover:text-white transition-colors duration-300 text-sm flex items-center gap-1.5 group"
                >
                  <span class="relative">
                    {link.text}
                    <span class="absolute -bottom-0.5 left-0 w-0 h-px bg-gradient-to-r from-indigo-500 to-pink-500 group-hover:w-full transition-all duration-300"></span>
                  </span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Línea divisoria con gradiente -->
    <div class="h-px bg-gradient-to-r from-slate-800/50 via-slate-700/50 to-slate-800/50"></div>

    <!-- Sección inferior -->
    <div class="pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright y tecnologías -->
        <div class="text-center md:text-left">
          <p class="text-slate-400 text-sm">
            © {currentYear} SebitServices. Todos los derechos reservados.
          </p>
          <p class="text-slate-500 text-xs mt-1">
            Desarrollado con pasión usando Astro y Tailwind CSS
          </p>
        </div>

        <!-- Redes sociales -->
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-400 hover:text-white transition-colors duration-300 group relative"
              title={social.name}
            >
              <Fragment set:html={social.icon} />
              <span class="sr-only">{social.name}</span>
              <span class="absolute -bottom-1 left-1/2 w-0 h-px bg-gradient-to-r from-indigo-500 to-pink-500 group-hover:w-full group-hover:left-0 transition-all duration-300"></span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer> 